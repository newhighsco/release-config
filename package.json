{
  "name": "@newhighsco/release-config",
  "description": "New High Score shareable config for semantic-release",
  "version": "1.0.33",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/release-config.git"
  },
  "homepage": "https://github.com/newhighsco/release-config#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/release-config/issues"
  },
  "main": "release.config.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --cache --ext .js,.jsx,.json .",
    "format": "npm-run-all --parallel format:*",
    "format:js": "npm run lint:js -- --fix"
  },
  "dependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.1.1",
    "@semantic-release/npm": "7.0.6",
    "@semantic-release/release-notes-generator": "9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@newhighsco/commitlint-config": "1.0.7",
    "@newhighsco/editor-config": "1.1.1",
    "@newhighsco/eslint-config": "2.2.39",
    "@newhighsco/prettier-config": "2.0.6",
    "eslint": "7.12.0",
    "husky": "4.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "semantic-release": "17.2.1"
  },
  "peerDependencies": {
    "semantic-release": "17.2.1"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "./release.config.js",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ],
    "packageRules": [
      {
        "extends": [
          "monorepo:semantic-release"
        ],
        "semanticCommitType": "fix"
      }
    ]
  }
}
